<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/contenedorN"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imgn_notify"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cat"/>

        <TextView
            android:id="@+id/txtn_titulo"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgn_notify"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imgn_notify"
            android:layout_weight="1"
            android:text="Titulo de la notificacion"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/txtn_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgn_notify"
            android:layout_alignStart="@+id/txtn_titulo"
            android:text="Un usuario te quiere contactar."
            android:textSize="12sp"/>

    </RelativeLayout>
</RelativeLayout>